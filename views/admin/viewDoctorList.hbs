<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Doctorlist</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
</head>

<body style="background-color:#e4f3f5">

    <div class="container">
        <div class="row">
            {{>adminnav}} {{#each doctors}}
            <div class="col-md-4">
                <div class="card" style="width: 20rem;">
                    <img class="card-img-top" src="../images/doctor/{{this.id}}.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{this.name}}</h5>
                        <p class="card-text"> {{this.department}}</p>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">{{this.designation}}</li>
                        <li class="list-group-item">{{this.email}}</li>
                        <li class="list-group-item">{{this.phone}}</li>
                        <li class="list-group-item">Visiting Fee {{this.fee}}</li>
                    </ul>
                    <div class="card-body">
                        <a href="/admin/editdoctor?id={{this._id}}" class="card-link">Edit Doctor</a>
                        <a href="#" onclick="deleteDoctor('{{this._id}}')" class="card-link">Delete Doctor</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>


</body>
    <script>
        deleteDoctor=(id)=>{
            if(window.confirm('Are you sure to delete')){
            window.location.href='/admin/deletedoctor?id='+id;
            }
        }
    </script>
</html>