<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>User List</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

</head>

<body>

    {{>adminnav}}
    <div class="col-md-10 col-md-offset-1">
        <form action="/admin/billing" method="post">
            <div class="row">
                <div class="col-md-6">
                    <label for="">Patient Name</label>
                    <input type="text" name="name" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="">Age</label>
                    <input type="text" name="age" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="">Phone</label>
                    <input type="text" name="phone" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="">Email</label>
                    <input type="text" name="email" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="">Address</label>
                    <input type="text" name="address" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="">Bed No</label>
                    <input type="text" name="bed" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="">Admission Date</label>
                    <input type="date" name="admission" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="">Discharge Date</label>
                    <input type="date" name="discharge" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="">Total Bill</label>
                    <input type="text" name="total" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="">Discount</label>
                    <input type="text" name="discount" class="form-control">
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label for="">Paid</label>
                    <input type="text" name="paid" class="form-control">
                </div>
                <div class="col-md-6">
                    <label for="">Due</label>
                    <input type="text" name="due" class="form-control">
                </div>
            </div>
            <br>
            <input type="submit" class="btn btn-success" name="" id="" value="Generate Bill">
        </form>
    </div>


</body>

</html>